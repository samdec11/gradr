= form_for @assignment, :remote => true do |f|
  = f.label 'Select class'
  = select_tag('assignment[group_id]', @groups.map(&:name))
  = f.label :name
  = f.text_field :name
  = button_to_function('Cancel', 'cancel_form()', :class => 'button radius tiny alert')
  = f.submit nil, :class => 'button radius tiny success'
