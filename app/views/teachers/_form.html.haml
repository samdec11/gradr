= form_for @teacher, :remote => true do |f|
  = f.label :name
  = f.text_field :name
  = f.label :email
  = f.text_field :email
  = f.label :password
  = f.password_field :password
  = f.label :password_confirmation, 'Password Confirmation'
  = f.password_field :password_confirmation
  = button_to_function('Cancel', 'cancel_create_form()', :class => 'button round alert tiny', :id => 'create_cancel')
  = f.submit nil, :class => 'button round success tiny'